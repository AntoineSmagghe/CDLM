{% extends 'base.html.twig' %}
{% block header %}{% endblock %}
{% block style %}
<link rel="stylesheet" href="/css/membres.css">
{% endblock %}
{% block body %}
<section id="article_cover">
    <img class="article_image_cover" src="/img/Arthur/DSCF6337.jpg" alt="Cover CDLM members">
    <div class="incover">
        <div class="article_cover_title">
            <h1 class="part_title">Les sorties</h1>
        </div>
    </div>
</section>
<section id="members">
    <article class="release_picture">
    {% for member in members %}
        <figure class="release_figure">
            <a href="{{path('article', {"format" : "releases", "id" : member.id})}}">
                {% set hasCover = false %}
                {% if covers != [] %}
                    {% for cover in covers %}
                        {% if cover.idArticle == member.id %}
                        <img class="img_release" src="{{ asset('/upload/pictures/' ~ cover.covername) }}" alt="Cover de la release : {{ member.title }}">
                        {% set hasCover = true %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
                {% if hasCover == false %}
                    {% if member.imgs|first != "" %}
                    <img class="img_release" src="{{ asset('/upload/pictures/' ~ member.imgs|first) }}" alt="Cover de la release : {{ member.title }}">
                    {% else %}
                    <img class="img_release" src="/img/CDLM_logo.svg" alt="Cover de la release {{ member.title }}">
                    {% endif %}
                {% endif %}
                <figcaption class="release_figcaption">
                    <h3>{{ member.title }}</h3>
                </figcaption>
            </a>
        </figure>
    {% endfor %}
    </article>
</section>
{% endblock %}