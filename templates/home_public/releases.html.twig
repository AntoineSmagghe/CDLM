{% extends 'base.html.twig' %}
{% block header %}
    {% include 'articles/meta.html.twig'%}
{% endblock %}
{% block style %}
<link rel="stylesheet" href="/css/membres.css">
<link rel="stylesheet" href="/css/membres900px.css">
<link rel="stylesheet" href="/css/membres600px.css">
{% endblock %}
{% block body %}
<section id="article_cover">
    <img class="article_image_cover" src="/img/Arthur/DSCF6337.jpg" alt="Cover CDLM members">
    <div class="incover">
        <div class="article_cover_title">
            <h1 class="part_title">Les sorties</h1>
        </div>
    </div>
</section>
<section id="members">
    <article class="release_picture">
    {% for release in articles %}
        <figure class="release_figure">
            <a href="{{path('article', {"format" : "releases", "id" : release.id})}}">
                {% set hasCover = false %}
                {% if covers != [] %}
                    {% for cover in covers %}
                        {% if cover.idArticle == release.id %}
                        <img class="img_release" src="{{ asset('/upload/pictures/' ~ cover.covername) | imagine_filter('300x300') }}" alt="Cover de la release : {{ release.title }}">
                        {% set hasCover = true %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
                {% if hasCover == false %}
                    {% if release.imgs|first != "" %}
                    <img class="img_release" src="{{ asset('/upload/pictures/' ~ release.imgs|first.name) | imagine_filter('300x300') }}" alt="Cover de la release : {{ release.title }}">
                    {% else %}
                    <img src="{{asset('/img/Arthur/DSCF6226.jpg') | imagine_filter('300x300')}}" alt="Photo de l'article : {{ release.title }}">
                    {% endif %}
                {% endif %}
                <figcaption class="release_figcaption">
                    <h3>{{ release.title }}</h3>
                </figcaption>
            </a>
        </figure>
    {% endfor %}
    </article>
</section>
{% endblock %}