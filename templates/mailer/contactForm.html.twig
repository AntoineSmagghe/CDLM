{% extends 'mailer/base.html.twig' %}
{% block title %}Message du formulaire de contact envoyé du site CDLM.space{% endblock %}
{% block body %}
    <div style="
        max-width: 520px;
        padding: 10px;
        margin: auto;
    ">
        <h1>Message de la part de {{ contact.surname }} {{ contact.name }}</h1>
        <p>Répondre à l'adresse : <a href="mailto:{{contact.email}}">{{contact.email}}</a></p>
    </div>
    <div style="
        background-color: #404040;
        color: white;
        padding: 10px;
        margin: auto;
        max-width: 500px;
        border-radius: 3px;
    ">
        <p>{{contact.text}}</p>
    </div>
{% endblock %}