{% extends 'base.html.twig' %}
{% block style %}
<link rel="stylesheet" href="/css/edit_post.css"></link>
{% endblock %}
{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
    <section class="login_form form-group">
    <h1 class="subtitle">Connexion</h1>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="mail">Email</label>
                <input type="text" id='mail' name="_username" placeholder="Adresse mail" class="form-control" value="{{ last_user }}">
            <div class="form-group">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" placeholder="Mot de passe" class="form-control">
            </div>
            <div class="form-group">
                <input type="hidden" name="_token" value="{{ csrf_token('submitLogin') }}">
                <button type="submit" class="a_btn a_btn btn_more">Envoyer</button>
            </div>
        </form>
    </section>
{% endblock %}