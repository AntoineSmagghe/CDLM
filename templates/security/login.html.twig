{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey }}
        </div>
    {% endif %}
    <div class="jumbotron">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label for="mail">Email</label>
                <input type="text" id='mail' name="_username" placeholder="Adresse mail" class="form-control" value="{{ last_user }}">
            <div class="form-group">
            </div>
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" placeholder="Mot de passe" class="form-control">
            </div>
            <div class="form-group">
                <input type="hidden" name="_token" value="{{ csrf_token('submitLogin') }}">
                <button type="submit" class="btn btn-success">Envoyer</button>
            </div>
        </form>
    </div>
{% endblock %}