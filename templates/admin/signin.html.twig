{% extends 'base.html.twig' %}

{% block style %}
<link rel="stylesheet" href="/css/edit_post.css"></link>
<link rel="stylesheet" href="/css/account.css"></link>
{% endblock %}

{% block body %}
<section id="sigin_form" class="form-group">
    <h1 class="subtitle">Enregistrer un nouveau membre</h1>
    {{form_start(form)}}
        {{form_row(form.surname, {'label': 'Prénom', 'attr': {'placeholder': 'Prénom'}})}}
        {{form_row(form.name, {'label': 'Nom', 'attr': {'placeholder': 'Nom'}})}}
        {{form_row(form.mail, {'label': 'Email', 'attr': {'placeholder': 'Email'}})}}
        {{form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe'}})}}
        {{form_row(form.confirm_password, {'label': 'Confirmation', 'attr': {'placeholder': 'Répéter le mot de passe'}})}}
        {{form_row(form.roles, {'label': ''})}}
        {{form_row(form.submit, {'label': 'Enregistrer', 'attr': {'class': 'a_btn btn_modify'}})}}
    {{form_end(form)}}
</div>
{% endblock %}