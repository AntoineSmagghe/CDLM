{% set hasCover = false %}
{% if covers != [] %}
    {% for cover in covers %}
        {% if cover.idArticle == article.id %}
            <img src="{{ asset('/upload/pictures/' ~ cover.covername) | imagine_filter('300x300') }}" alt="Photo : {{ article.title }}">
        {% set hasCover = true %}
        {% endif %}
    {% endfor %}
{% endif %}
{% if hasCover == false %}
    {% if article.imgs|first != "" %}
        <img src="{{ asset('/upload/pictures/' ~ article.imgs|first.name) | imagine_filter('300x300') }}" alt="Photo : {{ article.title }}">
    {% else %}
        <img src="{{asset('/build/img/////Arthur/DSCF6226.jpg') | imagine_filter('300x300')}}" alt="Photo : {{ article.title }}">
    {% endif %}
{% endif %}