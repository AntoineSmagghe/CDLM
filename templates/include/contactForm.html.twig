<div id="contact_form" class="form-group">
    <h2 class="subtitle">{% trans %}contact form{% endtrans %}</h2>
    {{ form_start(form) }}
        {{ form_errors(form.surname) }}
        {{ form_row(form.surname) }}
        
        {{ form_errors(form.name) }}
        {{ form_row(form.name) }}

        {{ form_errors(form.email) }}
        {{ form_row(form.email) }}
        
        {{ form_errors(form.text) }}
        {{ form_row(form.text) }}
        
        {{ form_row(form.send) }}
    {{ form_end(form) }}
</div>