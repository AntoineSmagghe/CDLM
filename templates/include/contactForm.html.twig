<div id="contact_form" class="form-group">
    <h2 class="subtitle">{% trans %}contact form{% endtrans %}</h2>
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_errors(form.surname) }}
            {{ form_widget(form.surname) }}
            {{ form_label(form.surname, null, {"label_attr": {"class": "moving-label"}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_label(form.name, null, {"label_attr": {"class": "moving-label"}}) }}
        </div>
        <div class="form-group">
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_label(form.email, null, {"label_attr": {"class": "moving-label"}}) }}
        </div>
        {{ form_errors(form.text) }}
        {{ form_row(form.text) }}
        
        {{ form_row(form.send) }}
    {{ form_end(form) }}
</div>